while(<STDIN>)
    {
    # comment out malformed feature comments
    if(/^%%BeginFeature: (\s+) (\s+) (.*)$/)
    	{
	print "% ", $_;
	while(<STDIN>)
	    {
	    if(/^%%EndFeature/)
	    	{
	    	print "% ", $_;
	    	last;
	    	}
	    print;
	    }
	}

    # insert newline before font comment
    s/ %%IncludeFont:/\n%%IncludeFont:/g;

    print;
    }

exit 0;

