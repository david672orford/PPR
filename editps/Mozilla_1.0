#! /usr/bin/perl
# mouse:~ppr/src/editps/Mozilla_1.6
# Last modified 4 March 2004.

#
# Allow Mozilla to print a wider range or characters.
#
# This was origionally written for Mozilla 1.0 but seems to work 
# with later versions such as 1.4 too.
#

%subs = (
	"Times-Roman" => "NimbusRomanCYR-Regu",
	"Times-Bold" => "NimbusRomanCYR-Medi",
	"Times-BoldItalic" => "NimbusRomanCYR-MediItal",
	"Times-Italic" => "NimbusRomanCYR-ReguItal",
	"Helvetica" => "NimbusSansCYR-Regu",
	"Helvetica-Bold" => "NimbusSansCYR-Medi",
	"Helvetica-BoldOblique" => "NimbusSansCYR-MediItal",
	"Helvetica-Oblique" => "NimbusSansCYR-ReguItal",
	"Courier" => "NimbusMonCYR-Regu",
	"Courier-Bold" => "NimbusMonCYR-Medi",
	"Courier-BoldOblique" => "NimbusMonCYR-MediItal",
	"Courier-Oblique" => "NimbusMonCYR-ReguItal"
	);

while(<STDIN>)
    {
    if(m#^\s+/(\S+) findfont$#)
	{
	my $font = $1;
	my $sub = $subs{$font};
	if(defined $sub)
	    {
	    print "%%IncludeResource: font $sub\n";
	    print "%$_";
	    print "    /$sub findfont\n";
	    next;
	    }
	}
    print;
    }

exit 0;
